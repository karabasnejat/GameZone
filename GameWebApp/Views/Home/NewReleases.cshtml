@model IEnumerable<GameWebApp.Models.Game>

@{
    ViewData["Title"] = "New Releases";
}

<h1>New Releases</h1>
<div class="row">
    @foreach (var game in Model)
    {
        <div class="col-lg-4 col-sm-6 mb-4">
            <div class="card h-100">
                <a href="@Url.Action("Details", "Home", new { id = game.Id })">
                    <img class="card-img-top" src="@game.ImageUrl" alt="@game.Name" />
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="@Url.Action("Details", "Home", new { id = game.Id })">@game.Name</a>
                    </h4>
                    <p class="card-text">@game.Description</p>
                </div>
            </div>
        </div>
    }
</div>
